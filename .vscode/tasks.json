{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "npm: serve auth microservice!",
			"type": "npm",
			"script": "api:serve auth",
			"isBackground": true,
			"presentation": {
				"focus": true,
				"panel": "dedicated"
			},
			"group": "build",
			"problemMatcher": {
				"owner": "typescript",
				"source": "ts",
				"applyTo": "closedDocuments",
				"fileLocation": [
					"relative",
					"${cwd}"
				],
				"pattern": "$tsc",
				"background": {
					"activeOnStart": true,
					"beginsPattern": {
						"regexp": "(.*?)"
					},
					"endsPattern": {
						"regexp": "Compiled:  undefined |Time: (.*?)ms"
					}
				}
			},
			"detail": "ng run auth:serve"
		},
		{
			"label": "kill-terminal",
			"type": "process",
			"command": "${command:workbench.action.terminal.kill}"
		}
	]
}